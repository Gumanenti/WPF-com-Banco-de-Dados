<Window x:Class="WPF_com_Banco_de_Dados.CadastroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_com_Banco_de_Dados"
        mc:Ignorable="d"
        Title="CadastroUsuario" Height="432" Width="286">
    <Grid Margin="0,0,0,15">
        <TextBox HorizontalAlignment="Center" Margin="0,68,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="202"/>
        <TextBox HorizontalAlignment="Center" Margin="0,164,0,0" TextWrapping="Wrap" Text="{Binding Email}" VerticalAlignment="Top" Width="202"/>
        <TextBox HorizontalAlignment="Center" Margin="0,263,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="202"/>
        <Button Content="Cadastrar" HorizontalAlignment="Left" Margin="42,314,0,0" VerticalAlignment="Top" Click="bnt_Salvar" Width="75"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="42,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="42,133,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="43,232,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
